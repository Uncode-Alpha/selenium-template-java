<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Test Suite" verbose="1" parallel="tests" thread-count="3">

    <!-- Global parameters (can be accessed by all tests) -->
    <parameter name="browser" value="chrome" />
    <parameter name="environment" value="staging" />

    <!-- Test 1: Smoke Tests -->
    <test name="Smoke Tests" preserve-order="true">
        <parameter name="username" value="testuser" />
        <parameter name="password" value="testpass" />

        <!-- Packages to include -->
        <packages>
            <package name="com.tests.smoke" />
        </packages>

        <!-- Groups to include/exclude -->
        <groups>
            <run>
                <include name="smoke" />
                <exclude name="broken" />
            </run>
        </groups>

        <!-- Classes to include -->
        <classes>
            <class name="com.tests.smoke.LoginTest" />
            <class name="com.tests.smoke.HomePageTest" />
        </classes>
    </test>

    <!-- Test 2: Regression Tests -->
    <test name="Regression Tests" parallel="methods" thread-count="5">
        <parameter name="username" value="admin" />
        <parameter name="password" value="admin123" />

        <!-- Classes to include -->
        <classes>
            <class name="com.tests.regression.SearchTest" />
            <class name="com.tests.regression.CheckoutTest" />
        </classes>
    </test>

    <!-- Test 3: API Tests -->
    <test name="API Tests">
        <!-- Methods to include -->
        <methods>
            <include name="testGetRequest" />
            <include name="testPostRequest" />
        </methods>
    </test>

    <!-- Listener to generate reports -->
    <listeners>
        <listener class-name="com.listeners.CustomTestListener" />
    </listeners>
</suite>